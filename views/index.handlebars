<header><img class="name" alt="GoodBurger icon" src="/assets/img/goodburger-icon.png"></header>
<div class="container">

  <div class="ate">
    <h2>Burgers that got ate!</h2>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="eat">
    <h2>Burger to eat!</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>

  <div class="add">
    <h2>Add a Good Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <div class="form-group">
        <label for="devoured">Has it been eaten yet?</label><br>
        <input type="radio" name="devoured" value="1" checked> Trying to get ate!<br>
        <input type="radio" name="devoured" value="0"> Ate
      </div>

      <button class="submit" type="submit">Add a Good Burger</button>
    </form>
  </div>
</div>