{{!-- Good Burger logo image --}}
<header><img class="name" alt="GoodBurger icon" src="/assets/img/goodburger-icon.png"></header>
<div class="container">

  {{!-- list of burgers that have been eaten --}}
  <div class="ate">
    <h2>Burgers you've eaten!</h2>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  {{!-- list of burgers that have yet to be eaten --}}
  <div class="eat">
    <h2>Burger to eat!</h2>
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>

  {{!-- adding a burger with whether it's been eaten or not --}}
  <div class="add">
    <h2>Add a Good Burger</h2>
    <form class="create-form">
      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>
      <div class="form-group">
        <label for="devoured">Has it been eaten yet?</label><br>
        <input type="radio" name="devoured" value="1" checked> Yet to be eaten!<br>
        <input type="radio" name="devoured" value="0"> Devoured
      </div>
      <button class="submit" type="submit">Add a Good Burger</button>
    </form>
  </div>
</div>